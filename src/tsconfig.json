{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,

    "moduleResolution": "node",
    "baseUrl": "../src",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "typeRoots": ["../node_modules/@types", "../node_modules/web-ext-types"]
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true,
    "babelOptions": {
      "sourceMaps": true,
      "presets": ["latest"]
    },
    "forkChecker": true,
  },
}
